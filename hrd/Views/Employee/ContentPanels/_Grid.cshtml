@model IEnumerable<vwEmployeeReligion>

<div id="divOverlay">
<div class="row mt-3">
    <div class="col-md-4">
        <button class="btn btn-outline-danger" type="button" id="btnDelete">Delete</button>
        <button class="btn btn-outline-info" type="button" id="btnEdit">Edit</button>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center">
                    <input class="form-check-input" type="checkbox" 
                         id="emp_checkbox_all"
                         aria-label="Checkbox for following text input">
                </th>
                <th scope="col">ID</th>
                <th scope="col">Employee Name</th>
                <th scope="col">Address</th>
                <th scope="col">Religion Code</th>
                <th scope="col">Religion Name</th>
            </tr>
        </thead>
        
        <tbody>
        @if(Model.Count() > 0) 
        {
            @foreach(var item in Model)
            {
                <tr>
                    <td scope="row" class="text-center">
                        <input class="form-check-input" type="checkbox" 
                        name="emp_checkbox"
                        id="emp_checkbox_@item.ID"
                        aria-label="Checkbox for following text input">
                    </td>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.ReligionCode</td>
                    <td>@item.ReligionName</td>
                </tr>
            }
        }
        </tbody>
        </table>
    </div>
</div>
</div>


